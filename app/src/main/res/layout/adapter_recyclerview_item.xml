<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:text=""
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPostTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switchToggle" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text=""
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCreateAt"
            app:layout_constraintStart_toStartOf="@+id/textViewPostTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewPostTitle" android:layout_marginTop="16dp"/>
    <Switch

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchToggle"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewPostTitle"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPostTitle" app:layout_constraintVertical_bias="0.0"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCreateAt"
            app:layout_constraintStart_toStartOf="@+id/textViewCreateAt"/>
</androidx.constraintlayout.widget.ConstraintLayout>